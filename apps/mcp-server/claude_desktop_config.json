{
  "mcpServers": {
    "yagovibe-bridge": {
      "command": "node",
      "args": ["/path/to/apps/mcp-server/dist/index.js"],
      "env": {
        "PORT": "7331",
        "N8N_TOKEN": "your-n8n-token-here",
        "N8N_WEBHOOK_MEETUP_CREATED": "https://your-n8n-host/webhook/meetup-created",
        "N8N_WEBHOOK_MARKET_CREATED": "https://your-n8n-host/webhook/market-created",
        "N8N_WEBHOOK_SESSION_EVENT": "https://your-n8n-host/webhook/session-event"
      }
    }
  }
}
