# YAGO Stack 환경변수 예시
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# 도메인 (운영 시 실제 도메인으로 변경)
DOMAIN=localhost

# 체크인 시그니처 비밀키 (운영 시 강력한 랜덤 문자열로 변경)
CHECKIN_SECRET=dev-secret-change-this-in-production

# 관리자 API 키 (운영 시 강력한 랜덤 문자열로 변경)
MANAGE_API_KEY=change-this-long-random-string

# Toss 결제
TOSS_SECRET_KEY=sk_test_xxx
TOSS_CLIENT_KEY=ck_test_xxx

# PortOne 결제
PORTONE_API_KEY=api_key_xxx
PORTONE_API_SECRET=secret_xxx

# Redis 설정
REDIS_URL=redis://localhost:6379/2
WAITLIST_PROMO_TTL_MIN=120   # 승급 토큰 유효시간(분)
HOLD_TTL_MIN=15              # 결제 hold 유효시간(분)
CHECKIN_SECRET=your-secret-key-here  # 체크인 QR 시그니처 검증용 시크릿

# Slack 알림 설정
SLACK_WEBHOOK_URL_ALERTS=https://hooks.slack.com/services/xxx/yyy/zzz
ALERTS_ENABLE=true
ALERTS_INTERVAL_SEC=30
ALERTS_CAPACITY_WARN=0.9      # 90% 찼을 때 경고
ALERTS_PAYFAIL_RATE=0.35      # 최근 5분 결제실패율(시작-성공 비율) 임계
ALERTS_CHECKIN_STALL_MIN=3    # 최근 N분간 체크인 정체시 경고

# OG 생성 및 소셜 퍼블리시
SITE_BASE=https://yago.sports          # 퍼블릭 베이스 URL
N8N_URL=https://automation.example     # n8n 인스턴스 베이스 URL
N8N_SOCIAL_WEBHOOK=/webhook/social-publish
N8N_SITES_WEBHOOK=/webhook/google-sites-publish
DEFAULT_HASHTAGS=#YAGO #Meetup
CLUB_LOGO_URL=https://yago.sports/logo.png
OG_FONT_NOTO=/app/assets/fonts/NotoSansKR-Regular.ttf
OG_OUTPUT=/data/public/og              # 생성 이미지 저장 루트

# ROI 리포트
ATTR_DIR=/data/public/attribution     # 어트리뷰션 데이터 저장 루트
REPORTS_PUBLIC=/data/public/reports   # 리포트 이미지 저장 루트

# 팀 블로그
N8N_TEAM_BLOG_HOOK=/webhook/team-blog-create

# Elo 레이팅 시스템
ELO_K=20
ELO_BASE=1500

# n8n 자동화 플레이북
N8N_URL=https://your-n8n-instance.com
N8N_SOCIAL_WEBHOOK=/webhook/social-publish
N8N_SITES_WEBHOOK=/webhook/google-sites-publish
N8N_TEAM_BLOG_HOOK=/webhook/team-blog-create

# Notion 연동
NOTION_TEAMS_DB=your-teams-database-id
NOTION_POSTS_DB=your-posts-database-id
NOTION_API_TOKEN=your-notion-integration-token

# WordPress 연동 (선택사항)
WORDPRESS_ENDPOINT=https://your-site.com/wp-json/wp/v2/posts
WORDPRESS_USERNAME=your-wordpress-username
WORDPRESS_PASSWORD=your-wordpress-password

# Google Sites 연동
GOOGLE_SITES_SITE_ID=your-google-sites-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=your-private-key

# 소셜 미디어 API (n8n에서 사용)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

INSTAGRAM_USER_ID=your-instagram-user-id
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# Slack 승인 시스템
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APPROVER_CHANNEL=C0123456789
INTERNAL_KEY=your-random-internal-key
N8N_WEBHOOK_APPROVED=https://your-n8n-instance.com/webhook/approved

# 결제 리턴 URL
PAYMENTS_RETURN_SUCCESS=/payments/success
PAYMENTS_RETURN_FAIL=/payments/fail

# Google OAuth 설정 (마스킹됨)
VITE_GOOGLE_CLIENT_ID=***REMOVED***
VITE_GOOGLE_CLIENT_SECRET=***REMOVED***

# Firebase 설정 (프론트)
VITE_FB_API_KEY=your-firebase-api-key
VITE_FB_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FB_PROJECT_ID=your-project-id
VITE_FB_STORAGE=your-project.appspot.com
VITE_FB_SENDER_ID=123456789
VITE_FB_APP_ID=1:123456789:web:abcdef

# n8n 워크플로 (팀 블로그 자동 생성)
VITE_N8N_URL=https://n8n.yourdomain.com

# n8n 웹훅 (선택사항)
N8N_WEBHOOK_POST_PUBLISHED=
N8N_WEBHOOK_TEAM_BLOG_CREATE=
N8N_TOKEN=