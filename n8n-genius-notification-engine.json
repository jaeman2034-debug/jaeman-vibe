        "options": {}
      },
      "id": "firestore-logger",
      "name": "📄 Firestore - Log Notification",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1120, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"ok\": true,\n  \"message\": \"천재 모드 알림 전송 완료\",\n  \"timestamp\": \"{{ $json.timestamp }}\",\n  \"item\": \"{{ $json.item.title }}\",\n  \"distance\": \"{{ $json.distanceFormatted }}\",\n  \"price\": \"{{ $json.priceFormatted }}\",\n  \"channels\": [\"slack\", \"telegram\"],\n  \"firestore_logged\": true\n}"
      },
