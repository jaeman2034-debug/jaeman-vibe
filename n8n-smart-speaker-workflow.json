    {
      "parameters": {
        "url": "https://asia-northeast3-yago-vibe.cloudfunctions.net/kakaoMiniBriefing",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"trigger\": \"morning_briefing\",\n  \"timestamp\": \"{{ new Date().toISOString() }}\"\n}",
        "options": {}
      },
      "id": "kakao-mini-notification",
      "name": "🎤 Kakao Mini 알림",
