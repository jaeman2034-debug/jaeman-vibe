      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [900, 600]
    },
    {
      "parameters": {
        "url": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"text\": \"🌅 아침 브리핑 알림\",\n  \"blocks\": [\n    {\n      \"type\": \"header\",\n      \"text\": {\n        \"type\": \"plain_text\",\n        \"text\": \"🌅 아침 브리핑 알림\"\n      }\n    },\n    {\n      \"type\": \"section\",\n      \"text\": {\n        \"type\": \"mrkdwn\",\n        \"text\": \"매일 아침 8시 자동 브리핑이 시작됩니다! 🎧\\n\\n• Kakao Mini: '야고 브리핑 틀어줘'\\n• Google Home: '오케이 구글, 야고 브리핑'\\n• 모바일 앱: 자동 푸시 알림\"\n      }\n    },\n    {\n      \"type\": \"divider\"\n    },\n    {\n      \"type\": \"context\",\n      \"elements\": [\n        {\n          \"type\": \"mrkdwn\",\n          \"text\": \"🤖 YAGO VIBE 스마트 스피커 브리핑 시스템\"\n        }\n      ]\n    }\n  ]\n}",
        "options": {}
      },
      "id": "slack-morning-notification",
      "name": "💬 Slack 아침 알림",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1120, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"ok\": true,\n  \"message\": \"스마트 스피커 브리핑 알림 전송 완료\",\n  \"timestamp\": \"{{ new Date().toISOString() }}\",\n  \"platforms\": [\"kakao_mini\", \"google_cast\", \"mobile_push\", \"slack\"],\n  \"autoPlay\": true\n}"
      },
