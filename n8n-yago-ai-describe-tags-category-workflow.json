      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [600, 200]
    },
    {
      "parameters": {
        "functionCode": "let output = {};\ntry {\n  const parsed = JSON.parse($json[\"choices\"][0][\"message\"][\"content\"]);\n  output.description = parsed.description || '';\n  output.tags = parsed.tags || [];\n  output.category = parsed.category || '기타';\n} catch (e) {\n  output.description = 'AI 분석 실패';\n  output.tags = [];\n  output.category = '기타';\n}\nreturn output;"
      },
