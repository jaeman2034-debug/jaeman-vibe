rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // 마켓 이미지는 모두 읽기 허용(썸네일/리스트 표시 목적)
    match /market/{allPaths=**} {
      allow read: if true;

      // 업로드/삭제는 자신의 UID 경로만 허용 (예: market/{uid}/{...})
      allow write: if request.auth != null &&
        request.auth.uid == resource.name.split('/')[1];
    }

    // 그 외 경로는 기본 거부
    match /{path=**} {
      allow read, write: if false;
    }
  }
}