{
  "name": "Simple Blog Test",
  "nodes": [
    {
      "id": "1",
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [200, 300],
      "parameters": {
        "httpMethod": "POST",
        "path": "blog-test",
        "responseMode": "lastNode"
      }
    },
    {
      "id": "2",
      "name": "Respond to Webhook",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [500, 300],
      "parameters": {
        "responseMode": "lastNode",
        "respondWith": "json",
        "responseBody": "{\n  \"status\": \"ok\",\n  \"message\": \"Blog saved!\",\n  \"title\": \"={{$json.payload.title}}\",\n  \"content\": \"={{$json.payload.content}}\"\n}"
      }
    }
  ],
  "connections": {
    "Webhook": { "main": [[{ "node": "Respond to Webhook", "type": "main", "index": 0 }]] }
  }
}
